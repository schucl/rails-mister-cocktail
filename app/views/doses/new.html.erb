<div class="container">
  <h3>Add a Dose to your Cocktail</h3>
  <%= simple_form_for [@cocktail, @dose] do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :description %>
    </div>

    <div class="form-inputs">
      <%= f.association :ingredient  %>
    </div>

    <div class="form-actions">
      <%= f.submit "add a dose" %>
    </div>
  <% end %>
</div>
